---
import Layout from '@/layouts/Layout.astro';
import { engineer, projects, experience, contacts } from '@/lib/data';
import { ProjectsList } from '@/components/ProjectsList';
import { ExperienceCard } from '@/components/ExperienceCard';
---

<Layout title='nikita@portfolio:~'>
	<div class='min-h-screen bg-background'>
		<main class='mx-auto max-w-4xl px-6 py-12'>
			<!-- About Section -->
			<section id='about' class='mb-20'>
				<div class='space-y-4'>
					<div class='flex items-center gap-2 text-muted-foreground mb-4'>
						<span class='text-primary'>~/about</span>
					</div>
					
					<h1 class='text-2xl text-foreground'>{engineer.name}</h1>

					<div class='space-y-1'>
						<p class='text-muted-foreground'>
							<span class='text-muted-foreground/60'>#</span> {engineer.status}
						</p>
						<p class='text-muted-foreground'>
							<span class='text-muted-foreground/60'>#</span> {engineer.specialization}
						</p>
					</div>

					<!-- Links -->
					<div class='flex flex-wrap gap-4 pt-4'>
						<a href={contacts.github} target='_blank' rel='noreferrer' class='text-primary hover:underline'>
							github
						</a>
						<a href={contacts.linkedin} target='_blank' rel='noreferrer' class='text-primary hover:underline'>
							linkedin
						</a>
						<a href={`mailto:${contacts.email}`} class='text-primary hover:underline'>
							email
						</a>
						<a 
							href='/nikita_lobanov.pdf' 
							download='nikita_lobanov.pdf'
							class='text-primary hover:underline'
						>
							resume
						</a>
					</div>
				</div>
			</section>

			<!-- Experience Section -->
			<section id='experience' class='mb-20'>
				<div class='flex items-center gap-2 text-muted-foreground mb-6'>
					<span class='text-primary'>~/experience</span>
				</div>
				<div class='space-y-4'>
					{experience.map(exp => (
						<ExperienceCard client:load experience={exp} />
					))}
				</div>
			</section>

			<!-- Projects Section -->
			<section id='projects' class='mb-20'>
				<div class='flex items-center gap-2 text-muted-foreground mb-6'>
					<span class='text-primary'>~/projects</span>
				</div>
				<ProjectsList client:load projects={projects} />
			</section>

			<!-- Footer -->
			<footer class='border-t border-border pt-8'>
				<div class='flex items-center gap-2 text-muted-foreground'>
					<span class='text-muted-foreground/60'># {new Date().getFullYear()} {engineer.name}</span>
					<span class='text-primary cursor-blink'>_</span>
				</div>
				<p class='text-xs text-muted-foreground/50 mt-4'>styled with the gruvbox theme</p>
			</footer>
		</main>
	</div>
</Layout>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
