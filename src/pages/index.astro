---
import Layout from '@/layouts/Layout.astro';
import { Github, Linkedin, Mail, ExternalLink } from 'lucide-react';
import { intro, projects, experience, contacts } from '@/lib/data';
import { ProjectCard } from '@/components/ProjectCard';
---

<Layout title='Nikita Lobanov'>
	<!-- Top Navigation -->
	<nav class='sticky top-0 z-50 border-b border-border/40 bg-background/95 backdrop-blur'>
		<div class='mx-auto max-w-3xl px-6 py-4'>
			<div class='flex items-center justify-between'>
				<a href='/' class='font-medium text-foreground transition-colors hover:text-muted-foreground'>{intro.name}</a>
				<a href='/notes' class='text-sm text-muted-foreground transition-colors hover:text-foreground'>notes</a>
			</div>
		</div>
	</nav>

	<main class='min-h-screen bg-background'>
		<div class='mx-auto max-w-3xl px-6 py-16 md:py-24'>
			<!-- About Section -->
			<section id='about' class='mb-20'>
				<div class='space-y-6'>
					<h1 class='text-4xl font-medium text-foreground md:text-5xl'>
            {intro.name}
					</h1>
					{intro.description && (
						<p class='text-muted-foreground leading-relaxed whitespace-pre-line'>
							{intro.description}
						</p>
					)}

					<!-- Social links -->
					<div class='flex items-center gap-4 pt-2'>
						<a
							href={contacts.github}
							target='_blank'
							rel='noreferrer'
							class='text-muted-foreground transition-colors hover:text-foreground'
							aria-label='GitHub'
						>
							<Github size={20} />
						</a>
						<a
							href={contacts.linkedin}
							target='_blank'
							rel='noreferrer'
							class='text-muted-foreground transition-colors hover:text-foreground'
							aria-label='LinkedIn'
						>
							<Linkedin size={20} />
						</a>
						<a
							href={`mailto:${contacts.email}`}
							class='flex items-center gap-1.5 text-muted-foreground transition-colors hover:text-foreground'
							aria-label='Email'
						>
							<Mail size={20} />
							<span class='text-sm'>nikita@nikitalobanov.com</span>
						</a>
					</div>
				</div>
			</section>

			<!-- Projects Section -->
			<section id='projects' class='mb-20'>
				<h2 class='mb-6 text-sm font-medium uppercase tracking-wider text-muted-foreground'>projects</h2>
				<div class='space-y-4'>
					{projects.map(project => (
						<ProjectCard client:load project={project} />
					))}
				</div>
			</section>

			<!-- Experience Section -->
			<section id='experience' class='mb-20'>
				<h2 class='mb-6 text-sm font-medium uppercase tracking-wider text-muted-foreground'>experience</h2>
				<div class='space-y-4'>
					{experience.map(exp => (
						<a
							href={exp.url}
							target='_blank'
							rel='noreferrer'
							class='group block rounded-md border border-border/50 p-5 transition-all hover:border-border'
						>
							<div class='space-y-2'>
								<div class='flex items-center gap-2'>
									<h3 class='font-medium text-foreground group-hover:text-primary transition-colors'>
										{exp.title}
									</h3>
									<ExternalLink size={14} className='text-muted-foreground/50 group-hover:text-primary transition-colors' />
								</div>
								<p class='text-sm text-muted-foreground/80'>
									{exp.company}
								</p>
								<p class='text-sm text-muted-foreground leading-relaxed whitespace-pre-line'>
									{exp.description}
								</p>
							</div>
						</a>
					))}
				</div>
			</section>

			<!-- Footer -->
			<footer class='border-t border-border/40 pt-8 text-center text-xs text-muted-foreground'>
				<p>Â© {new Date().getFullYear()} {intro.name}</p>
			</footer>
		</div>
	</main>
</Layout>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
