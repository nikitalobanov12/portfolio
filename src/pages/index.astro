---
import Layout from '@/layouts/Layout.astro';
import { engineer, projects, experience, contacts } from '@/lib/data';
import { ProjectsList } from '@/components/ProjectsList';
import { ExperienceCard } from '@/components/ExperienceCard';
---

<Layout title='Nikita Lobanov'>
	<div class='min-h-screen bg-background'>
		<main class='mx-auto max-w-3xl px-6 py-16 md:py-24'>
			<!-- Hero Section -->
			<section id='about' class='mb-24 animate-fade-in'>
				<div class='space-y-6'>
					<!-- Name -->
					<h1 class='text-3xl md:text-4xl font-semibold tracking-tighter text-foreground'>
						{engineer.name}
					</h1>
					
					<!-- Role & Status -->
					<div class='space-y-1'>
						<p class='text-foreground'>{engineer.specialization}</p>
						<p class='text-muted-foreground text-sm'>{engineer.status}</p>
					</div>

					<!-- Introduction -->
					{engineer.introduction && (
						<p class='text-muted-foreground leading-relaxed max-w-2xl'>
							{engineer.introduction}
						</p>
					)}

					<!-- Contact Links -->
					<div class='flex flex-wrap gap-6 pt-2'>
						<a 
							href={contacts.github} 
							target='_blank' 
							rel='noreferrer' 
							class='text-sm text-muted-foreground hover:text-primary transition-colors duration-150'
						>
							github
						</a>
						<a 
							href={contacts.linkedin} 
							target='_blank' 
							rel='noreferrer' 
							class='text-sm text-muted-foreground hover:text-primary transition-colors duration-150'
						>
							linkedin
						</a>
						<a 
							href={`mailto:${contacts.email}`} 
							class='text-sm text-muted-foreground hover:text-primary transition-colors duration-150'
						>
							{contacts.email}
						</a>
					</div>

					<!-- Project Quick Links -->
					<div class='pt-8'>
						<div class='h-px bg-border mb-6' />
						<div class='flex flex-wrap gap-x-5 gap-y-2'>
							{projects.map(project => (
								<a 
									href={project.detailPage || project.liveUrl || project.url} 
									class='text-sm text-primary hover:text-foreground transition-colors duration-150'
								>
									{project.title.toLowerCase()}
								</a>
							))}
						</div>
					</div>
				</div>
			</section>

			<!-- Experience Section -->
			<section id='experience' class='mb-24 animate-fade-in animate-delay-2'>
				<div class='mb-8'>
					<span class='section-label text-muted-foreground'>
						<span class='text-primary'>~/</span>experience
					</span>
				</div>
				<div class='space-y-1'>
					{experience.map(exp => (
						<ExperienceCard client:load experience={exp} />
					))}
				</div>
			</section>

			<!-- Projects Section -->
			<section id='projects' class='mb-24 animate-fade-in animate-delay-3'>
				<div class='mb-8'>
					<span class='section-label text-muted-foreground'>
						<span class='text-primary'>~/</span>projects
					</span>
				</div>
				<ProjectsList client:load projects={projects} />
			</section>

			<!-- Footer -->
			<footer class='animate-fade-in animate-delay-4'>
				<div class='h-px bg-border mb-8' />
				<p class='text-sm text-muted-foreground'>
					&copy; {new Date().getFullYear()} {engineer.name}
				</p>
			</footer>
		</main>
	</div>
</Layout>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
